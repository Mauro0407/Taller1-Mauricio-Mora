@model Taller1_Mauricio_Mora.Models.Jugador

@{
    ViewData["Title"] = "Detalles del Jugador";
}

<h1 class="text-center mt-4">Detalles del Jugador</h1>

<div class="card mx-auto mt-4 shadow-sm" style="max-width: 600px;">
    <div class="card-body">
        <h4 class="card-title text-center">Información del Jugador</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">Nombre</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>

            <dt class="col-sm-4">Posición</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Posicion)</dd>

            <dt class="col-sm-4">Edad</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Edad)</dd>

            <dt class="col-sm-4">Equipo</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Equipo)</dd>

            <dt class="col-sm-4">ID del Equipo</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.IdEquipo)</dd>
        </dl>
        <hr />
        <div class="d-flex justify-content-center">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary me-2">Editar</a>
            <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
        </div>
    </div>
</div>
