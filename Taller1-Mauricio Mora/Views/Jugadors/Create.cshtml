@model Taller1_Mauricio_Mora.Models.Jugador

@{
    ViewData["Title"] = "Crear Jugador";
}

<h1 class="text-center mt-4">Crear Jugador</h1>

<div class="card mx-auto mt-4 shadow-sm" style="max-width: 600px;">
    <div class="card-body">
        <h4 class="card-title text-center">Detalles del Jugador</h4>
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="form-group mb-3">
                <label asp-for="Nombre" class="form-label"></label>
                <input asp-for="Nombre" class="form-control" placeholder="Nombre del jugador" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Posicion" class="form-label"></label>
                <input asp-for="Posicion" class="form-control" placeholder="Posición del jugador" />
                <span asp-validation-for="Posicion" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Edad" class="form-label"></label>
                <input asp-for="Edad" class="form-control" placeholder="Edad del jugador" />
                <span asp-validation-for="Edad" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Equipo" class="form-label"></label>
                <input asp-for="Equipo" class="form-control" placeholder="Equipo del jugador" />
                <span asp-validation-for="Equipo" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="IdEquipo" class="form-label"></label>
                <input asp-for="IdEquipo" class="form-control" placeholder="ID del equipo" />
                <span asp-validation-for="IdEquipo" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <input type="submit" value="Crear Jugador" class="btn btn-success btn-lg" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
