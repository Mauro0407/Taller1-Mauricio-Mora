@model IEnumerable<Taller1_Mauricio_Mora.Models.Jugador>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Lista de Jugadores</h1>

<div class="row">
    <div class="offset-9 col-3 mb-3">
        <a asp-action="Create" asp-controller="Jugadors" class="btn d-block mx-auto btn-lg" style="background-color: #5F51F3; border-color: #5F51F3; color: #ffffff;">Crear Nuevo Jugador</a>
    </div>
</div>

<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong> Lista de Jugadores </strong></h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    @if (Model.Count() > 0)
                    {
                        <table class="table table-bordered" id="tblJugadores" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(m => m.Nombre)</th>
                                    <th>@Html.DisplayNameFor(m => m.Posicion)</th>
                                    <th>@Html.DisplayNameFor(m => m.Edad)</th>
                                    <th>@Html.DisplayNameFor(m => m.Equipo)</th>
                                    <th>@Html.DisplayNameFor(m => m.IdEquipo)</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(m => item.Nombre)</td>
                                        <td>@Html.DisplayFor(m => item.Posicion)</td>
                                        <td>@Html.DisplayFor(m => item.Edad)</td>
                                        <td>@Html.DisplayFor(m => item.Equipo)</td>
                                        <td>@Html.DisplayFor(m => item.IdEquipo)</td>
                                        <td>
                                            <a class="btn btn-warning" href="@Url.Action("Edit", "Jugadors", new { id = item.Id })">Editar</a>
                                            <a class="btn btn-info" href="@Url.Action("Details", "Jugadors", new { id = item.Id })">Detalles</a>
                                            <a class="btn btn-danger" href="@Url.Action("Delete", "Jugadors", new { id = item.Id })">Borrar</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p>No hay registros</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tblJugadores').DataTable({
                language: {
                    "decimal": "",
                    "emptyTable": "No hay información",
                    "info": "Mostrando START a END de TOTAL Entradas",
                    "infoEmpty": "Mostrando 0 to 0 of 0 Entradas",
                    "infoFiltered": "(Filtrado de MAX total entradas)",
                    "infoPostFix": "",
                    "thousands": ",",
                    "lengthMenu": "Mostrar MENU Entradas",
                    "loadingRecords": "Cargando...",
                    "processing": "Procesando...",
                    "search": "Buscar:",
                    "zeroRecords": "Sin resultados encontrados",
                    "paginate": {
                        "first": "Primero",
                        "last": "Ultimo",
                        "next": "Siguiente",
                        "previous": "Anterior"
                    }
                }
            });
        });
    </script>
}
