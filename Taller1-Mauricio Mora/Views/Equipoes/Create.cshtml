@model Taller1_Mauricio_Mora.Models.Equipo

@{
    ViewData["Title"] = "Crear Equipo";
}

<h1 class="text-center mt-4">Crear Equipo</h1>

<div class="card mx-auto mt-4 shadow-sm" style="max-width: 600px;">
    <div class="card-body">
        <h4 class="card-title text-center">Detalles del Equipo</h4>
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="form-group mb-3">
                <label asp-for="Nombre" class="form-label"></label>
                <input asp-for="Nombre" class="form-control" placeholder="Nombre del equipo" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Ciudad" class="form-label"></label>
                <input asp-for="Ciudad" class="form-control" placeholder="Ciudad del equipo" />
                <span asp-validation-for="Ciudad" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Titulos" class="form-label"></label>
                <input asp-for="Titulos" class="form-control" placeholder="Número de títulos" />
                <span asp-validation-for="Titulos" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="AceptaExtranjeros" class="form-label"></label>
                <select asp-for="AceptaExtranjeros" class="form-select">
                    <option value="true">Sí</option>
                    <option value="false">No</option>
                </select>
                <span asp-validation-for="AceptaExtranjeros" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <input type="submit" value="Crear Equipo" class="btn btn-success btn-lg" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
