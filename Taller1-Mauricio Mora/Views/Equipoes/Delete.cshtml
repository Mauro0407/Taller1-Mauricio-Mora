@model Taller1_Mauricio_Mora.Models.Equipo

@{
    ViewData["Title"] = "Borrar Equipo";
}

<h1 class="text-center mt-4">Borrar Equipo</h1>

<div class="card mx-auto mt-4 shadow-sm" style="max-width: 600px;">
    <div class="card-body">
        <h3 class="text-center">¿Estás seguro de que quieres borrar esto?</h3>
        <h4>Equipo</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Nombre)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>
            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Ciudad)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Ciudad)</dd>
            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Titulos)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Titulos)</dd>
            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.AceptaExtranjeros)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.AceptaExtranjeros)</dd>
        </dl>

        <form asp-action="Delete" class="text-center">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Borrar" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
        </form>
    </div>
</div>
