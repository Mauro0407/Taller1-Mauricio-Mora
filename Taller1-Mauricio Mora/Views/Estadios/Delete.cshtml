@model Taller1_Mauricio_Mora.Models.Estadio

@{
    ViewData["Title"] = "Borrar Estadio";
}

<h1 class="text-center mt-4">Borrar Estadio</h1>

<div class="card mx-auto mt-4 shadow-sm" style="max-width: 600px;">
    <div class="card-body">
        <h3 class="text-center">¿Estás seguro de que quieres borrar esto?</h3>
        <h4>Estadio</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Direccion)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Direccion)</dd>
            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Ciudad)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Ciudad)</dd>
            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Capacidad)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Capacidad)</dd>
        </dl>

        <form asp-action="Delete" class="text-center">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Borrar" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
        </form>
    </div>
</div>
