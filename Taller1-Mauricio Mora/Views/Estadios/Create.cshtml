@model Taller1_Mauricio_Mora.Models.Estadio

@{
    ViewData["Title"] = "Crear Estadio";
}

<h1 class="text-center mt-4">Crear Estadio</h1>

<div class="card mx-auto mt-4 shadow-sm" style="max-width: 600px;">
    <div class="card-body">
        <h4 class="card-title text-center">Detalles del Estadio</h4>
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
            
            <div class="form-group mb-3">
                <label asp-for="Direccion" class="form-label"></label>
                <input asp-for="Direccion" class="form-control" placeholder="Dirección del estadio" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Ciudad" class="form-label"></label>
                <input asp-for="Ciudad" class="form-control" placeholder="Ciudad del estadio" />
                <span asp-validation-for="Ciudad" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Capacidad" class="form-label"></label>
                <input asp-for="Capacidad" class="form-control" placeholder="Capacidad del estadio" />
                <span asp-validation-for="Capacidad" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <input type="submit" value="Crear Estadio" class="btn btn-success btn-lg" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
